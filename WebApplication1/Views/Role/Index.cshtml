
@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>

<div class="d-flex gap-3 mb-4">
    <a asp-action="Create" class="btn btn-success d-flex align-items-center gap-2">
        <i class="fas fa-plus"></i> <span>Create New</span>
    </a>

    <a asp-action="AssignRole" class="btn btn-primary d-flex align-items-center gap-2">
        <i class="fas fa-user-shield"></i> <span>Assign Role</span>
    </a>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
           
            <th>
                Role Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in ViewBag.Role) {
        <tr>
          
            <td>
                @item.Name
            </td>
                <td>
                    
                     @Html.ActionLink(
                             "Edit",
                             "Edit",
                             new { name = item.Name },
                             new { @class = "btn btn-primary" }
                             )
                    @*
                             @Html.ActionLink(
                             "Details",
                             "Details",
                             new { id = item.Id },
                             new { @class = "btn btn-info" }
                             )
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" }) *@
                </td>
        </tr>
}
    </tbody>
</table>
