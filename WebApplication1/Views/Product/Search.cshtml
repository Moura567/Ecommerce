@model IEnumerable<WebApplication1.Models.product>

<div class="container mt-4">
    <h2>Search Results</h2>

    @if (!Model.Any())
    {
        <p>No products found for your search query.</p>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img class="card-img-top" src="~/images/@product.image" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>@product.price.ToString("C")</strong></p>
                            <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
